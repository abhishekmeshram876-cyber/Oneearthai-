}document.getElementById("solveBtn").addEventListener("click", async () => {
  const input = document.getElementById("userInput").value.trim();
  const outputDiv = document.getElementById("output");

  if (!input) {
    outputDiv.innerHTML = "<p>Please type your problem first.</p>";
    return;
  }

  outputDiv.innerHTML = "<p>â³ Thinking...</p>";

  try {
    const res = await fetch("/api/solve", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ prompt: input }),
    });
    const data = await res.json();
    outputDiv.innerHTML = `<p>${data.answer}</p>`;
  } catch (err) {
    outputDiv.innerHTML = "<p>âš ï¸ Something went wrong. Please try again.</p>";
  }
});import OpenAI from "openai";

export default async function handler(req, res) {
  try {
    const { prompt } = req.body;
    const openai = new OpenAI({ apiKey: process.env.OPENAI_API_KEY });

    const completion = await openai.chat.completions.create({
      model: "gpt-4o-mini",
      messages: [
        {
          role: "system",
          content:
            "You are One Earth AI, a global helper that gives practical, positive, and kind solutions for human life problems.",
        },
        { role: "user", content: prompt },
      ],
    });

    const answer = completion.choices[0].message.content;
    res.status(200).json({ answer });
  } catch (error) {
    res.status(500).json({ error: error.message });
  }
}OPENAI_API_KEY=your_openai_api_key_herenode_modules/
